module countdowndisp (
    input number[2],
    input row[4],
    input col[7],
    output cdtop,
    output cdbot
  ) {
  
  sig num[4][16][10];
  sig out[32][64];
  sig zeros[32][64];
  var numRow;

  always {
    zeros = {64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0,64b0};
    cdtop = 0;
    cdbot = 0;
      
    out = zeros;
    
    num[0] = {10b0, 10b0, 10b0, 10b0, 10b0, 10b0, 10b0, 10b0, 10b0, 10b0, 10b0, 10b0, 10b0, 10b0, 10b0, 10b0};
    num[1] = {b0000110000, b0000111000, b0000111100, b0000110110, b0000110000, b0000110000, b0000110000, b0000110000, b0000110000, b0000110000, b0000110000, b0000110000, b0000110000, b0000110000, b0111111110, b0111111110};
    num[2] = {b0011111100, b0111111110, b1110000111, b1100000011, b1100000000, b1100000000, b0110000000, b0011000000, b0001100000, b0000110000, b0000011000, b0000001100, b0000000110, b0000000011, b1111111111, b1111111111};
    num[3] = {b0011111110, b0111111111, b1110000011, b1100000000, b1100000000, b1100000000, b1110000000, b0111110000, b0111110000, b1110000000, b1100000000, b1100000000, b1100000000, b1110000011, b0111111111, b0011111110};
    
    for (numRow = 8; numRow < 24; numRow++){
      out[numRow] = 0 + num[number][23 - numRow] << 28;
    }
      
    cdtop = out[row][col];
    cdbot = out[row + 16][col];
    
  }
}
